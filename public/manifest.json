{
  "manifest_version": 3,
  "name": "PromptAid",
  "version": "2.0",
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "storage",
    "cookies"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "icons": {
    "32": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://dacasia-chat.hakuneo.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": {
      "32": "icon.png"
    }
  }
}